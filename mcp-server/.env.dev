# Development Environment Configuration
# This file is automatically loaded by start_mcp_dev.sh

# MCP Server - Development Settings
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_ENABLE_CORS=true

# Microsandbox Connection
MSB_SERVER_URL=http://127.0.0.1:5555

# Session Management - Development friendly
MSB_MAX_SESSIONS=5
MSB_SESSION_TIMEOUT=1800
MSB_DEFAULT_FLAVOR=small
MSB_SESSION_CLEANUP_INTERVAL=60

# Resource Limits - Conservative for development
MSB_MAX_TOTAL_MEMORY_MB=4096
MSB_MAX_EXECUTION_TIME=1800

# Volume Mapping - Development directories
MSB_ENABLE_VOLUME_MAPPING=true
MSB_SHARED_VOLUME_PATH=["/Users/CE/Documents/agent-wd:/sandbox/shared"]

# Logging - Verbose for development
MSB_LOG_LEVEL=DEBUG
MSB_LOG_FORMAT=text