# Production Environment Configuration
# This file can be loaded by start_mcp_dev.sh for production deployment

# MCP Server - Production Settings
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8080
MCP_ENABLE_CORS=false

# Microsandbox Connection
MSB_SERVER_URL=http://microsandbox-server:5555
MSB_CONNECTION_TIMEOUT=60
MSB_REQUEST_TIMEOUT=600

# Session Management - Production scale
MSB_MAX_SESSIONS=50
MSB_SESSION_TIMEOUT=3600
MSB_DEFAULT_FLAVOR=medium
MSB_SESSION_CLEANUP_INTERVAL=300

# Resource Limits - Production capacity
MSB_MAX_TOTAL_MEMORY_MB=16384
MSB_MAX_TOTAL_CPU_CORES=16
MSB_MAX_EXECUTION_TIME=600

# Volume Mapping - Production directories
MSB_ENABLE_VOLUME_MAPPING=true
MSB_SHARED_VOLUME_PATH=["/data/input:/sandbox/input", "/data/output:/sandbox/output", "/app/config:/config"]

# Logging - Production logging
MSB_LOG_LEVEL=WARNING
MSB_LOG_FORMAT=json
MSB_LOG_FILE=/var/log/mcp-server/mcp-server.log

# Advanced Configuration
MSB_SANDBOX_START_TIMEOUT=300
MSB_ORPHAN_CLEANUP_INTERVAL=600